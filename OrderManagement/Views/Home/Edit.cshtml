@model OrderEditViewModel

@{
    ViewData["Title"] = "Edit Order";
}

<h1>@ViewData["Title"]</h1>
<h3>Order</h3>
<hr />

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Surname" class="form-control">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Table" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Table" class="form-control">
            <span asp-validation-for="Table" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FoodName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="FoodName" class="form-control">
            <span asp-validation-for="FoodName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-sm-7">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
    <div class="form-group mt-3">
        <div class="col-sm-7">
            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>